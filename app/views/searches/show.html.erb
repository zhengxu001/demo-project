<%- model_class = Search -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Question) %>:</strong></dt>
  <dd><%= @search.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Sparql) %>:</strong></dt>
  <dd><%= @search.query %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Results) %>:</strong></dt>
  <dd>
    <% @results.each do |result| %>
      <% @results.variable_names.each do |var| %>
        <li><%= link_to result[var], result[var].to_s %></li>
      <% end %>
    <% end %>
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              searches_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_search_path(@search), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              search_path(@search),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
